<section class="m-2">
    <h1 class="title is-2">New Blog Post</h1>
</section>
<div class="form-container my-1">
    <form action="/api/blog/add" method="POST">
        <div class="field">
            <p class="control">
                <input name="title" id="title" class="input" type="text" placeholder="Title">
            </p>
        </div>                
        <div class="field">
            <p class="control">
                    <textarea name="content" id="content" class="textarea" id="comment-input" placeholder="Add a blog post..."></textarea>
            </p>
        </div>
        <div class="field">
            <p class="control">
                <button class="button is-success" id="post-btn">
                Post
                </button>
            </p>
        </div>         
    </form>
</div>
